#! /bin/bash

abort()
{
    rm -rf {{temp_dir}}
    exit 1
}

trap 'abort' 0

set -e

mkdir -p {{temp_dir}}/node_modules
cd {{temp_dir}}
cp -r {{addons_dir}}/{{package.name}} ./node_modules/
mv ./node_modules/{{package.name}}/node_modules/* ./node_modules/

npm update

mkdir -p {{addons_dir}}
rm -rf {{addons_dir}}/{{package.name}}
mv ./node_modules/{{package.name}} {{addons_dir}}/{{package.name}}
mv ./node_modules {{addons_dir}}/{{package.name}}/node_modules

rm -rf {{temp_dir}}

trap : 0
