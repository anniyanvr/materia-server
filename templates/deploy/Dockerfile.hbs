RUN mkdir -p /root/.ssh
COPY ./key.pem /root/.ssh/id_rsa
RUN chmod 400 /root/.ssh/id_rsa && ssh -o StrictHostKeyChecking=no git@bumpmann.dtdns.net -p 7777 uptime && git clone ssh://git@bumpmann.dtdns.net:7777/~/materia /app/materia && cd /app/materia && npm install
