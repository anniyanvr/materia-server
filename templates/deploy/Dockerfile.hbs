RUN mkdir -p /app/user
COPY . /app/user

{{#if instance.use_runnable}}
WORKDIR /app/user

ENV PATH /app/materia:$PATH
ENV MATERIA_MODE prod

ENTRYPOINT ["/app/user/docker-entrypoint.sh"]

EXPOSE {{instance.port}}
CMD ["materia", "start"]
{{/if}}